{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 20
    },
    "speaker": {
      "type": "string",
      "pattern": "(Mr.|Mrs.)?[A-Za-z ]+"
    },
    "type": { "$ref": "talk_type.json" },
    "date": { "$ref": "#/definitions/dateType" },
    "location": { "$ref": "location.json" }
  },
  "required": ["location"],
  "definitions": {
    "dateType" : {
      "type": "object",
      "properties": {
        "year": {
          "type": "string",
          "minLength": 4,
          "maxLength": 4
        },
        "month": { "$ref": "#/definitions/integerType" },
        "day": { "$ref": "#/definitions/integerType" }
      },
      "required": ["year", "month", "day"],
      "additionalProperties": false
    },
    "integerType" : {
      "type": "integer"
    }
  }
}